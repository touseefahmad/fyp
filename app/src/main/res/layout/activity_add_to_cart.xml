<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:numberpicker="http://schemas.android.com/tools">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="true"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tvMenuNameCart"
            android:text="Name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tvMenuDescCart"
            android:text="desc"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <TextView
            android:id="@+id/tvMenuPriceCart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>


    <com.travijuu.numberpicker.library.NumberPicker
        android:id="@+id/qty_picker"
        android:layout_width="match_parent"
        android:layout_height="40dp"
        numberpicker:min="1"
        numberpicker:max="10"
        numberpicker:value="1"
        numberpicker:unit="1"
        numberpicker:focusable="false"
        numberpicker:custom_layout="@layout/number_picker_custom_layout" />
        <Button
            android:id="@+id/btnAddCartDone"
            android:text="ADD"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </Button>

        <Button
            android:id="@+id/btnShowCart"
            android:text="Show Cart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

        </Button>
    </LinearLayout>

</RelativeLayout>